{
  "compilerOptions": {
    "module": "ESNext",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "moduleResolution": "bundler",
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "target": "ES2021",
    "sourceMap": true,
    "allowJs": false,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
